<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width,initial-scale=1.0")
        meta(http-equiv="X-UA-compatible", content="ie=edge")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
        block styles
        script(src="https://app.wonderchat.io/scripts/wonderchat.js" data-name="wonderchat"
        data-address="app.wonderchat.io"
        data-id="cm27bxasg0l5zjp344tsbljzo"
        data-widget-size="normal"
        data-widget-button-size="normal"
        defer)
    body
        script(src='/js/chatbot.js')
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        if !isAdmin
                            a(href="/", class=(path === '/' ?'active' : '')) Shop
                            li.main-header__item
                                a(href="/products", class=(path === '/products' ?'active' : ''))  Products
                                if isAuthenticated
                                    if cartExists
                                        li.main-header__item
                                            a(href="/cart", class=(path === '/cart' ? 'active' : ''))  Cart
                                    if orderExists
                                        li.main-header__item
                                            a(href="/orders", class=(path === '/orders' ? 'active' : ''))  Order
                        if isAdmin
                            li.main-header__item
                                a(href="/admin/add-product", class=(path === '/add-product' ? 'active' : '')) Add-product
                            li.main-header__item
                                a(href="/admin/products", class=(path === '/admin/products' ? 'active' : ''))  Admin products
                ul.main-header__item-list
                    if !isAuthenticated
                        li.main-header__item
                            a(href="/login", class=(path === '/login' ? 'active' : '')) Login
                        li.main-header__item
                            a(href="/signup", class=(path === '/signup' ? 'active' : '')) Signup
                    if isAuthenticated
                        li.main-header__item
                            form(action ='/logout' method='post')
                                button.btn(type='submit') Logout
        block content